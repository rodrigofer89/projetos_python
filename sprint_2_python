n1 = int(input('Primeiro valor: '))
n2 = int(input('Segundo valor: '))
opcao = 0
while opcao != 8:

    print('''    [ 1 ] somar
    [ 2 ] multiplicar
    [ 3 ] subtrair
    [ 4 ] dividir
    [ 5 ] maior
    [ 6 ] menor
    [ 7 ] novos números
    [ 8 ] fechar programa''')
    print('=-=' * 12)
    opcao = int(input('Qual é a sua opção? '))
    if opcao == 1:
        soma = n1 + n2
        print('A soma entre {} + {} é {}'.format(n1, n2, soma))
    elif opcao == 2:
        mult = n1 * n2
        print('A multiplicação entre {} x {} é {}'.format(n1, n2, mult))
    elif opcao == 3:
        if n1 < n2:
            maior = n2
            sub = maior - n1
            print('A subtração entre {} - {} é {}'.format(n1, maior, sub))
        else:
            sub = n1 - n2
            print('A subtração entre {} - {} é {}'.format(n1, n2, sub))
    elif opcao == 4:
        div = n1 / n2
        print('A divisão entre {} / {} é {:.2f}'.format(n1, n2, div))
    elif opcao == 5:
        if n1 > n2:
            maior = n1
            print('Entre {} e {} o maior valor é {}'.format(n1, n2, maior))
        elif n2 > n1:
            maior = n2
            print('Entre {} e {} o maior valor é {}'.format(n1, n2, maior))
        else:
            print('{} e {} são valores iguais'.format (n1, n2))
    elif opcao == 6:
        if n1 < n2:
            menor = n1
            print('Entre {} e {} o menor valor é {}'.format(n1, n2, menor))            
        elif n2 < n1:
            menor = n2
            print('Entre {} e {} o menor valor é {}'.format(n1, n2, menor))
        else:
            print('{} e {} são valores iguais'.format(n1, n2))

    elif opcao == 7:
        print('Informe os números novamente: ')
        n1 = int(input('Primeiro valor: '))
        n2 = int(input('Segundo valor: '))
    elif opcao == 8:
        print('Finalizando...')
    else:
        print('Opção inválida. Tente novamente')
    print('=-=' * 12)
print('Fim do programa! Volte sempre!!')
